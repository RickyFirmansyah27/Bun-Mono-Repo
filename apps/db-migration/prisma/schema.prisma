// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  name  String
  password String
  profile UserProfile?
  createdAt DateTime @default(now())
}

model UserProfile {
  id        Int       @id @default(autoincrement())
  fullname  String
  email     String    @unique
  phone     String?
  address   String?
  role      Role      @default(express)
  createdAt DateTime  @default(now())
  userId    Int       @unique
  user      User      @relation(fields: [userId], references: [id])
}

enum Role {
  express
  hono
  fastify
  koa
  elysia
}